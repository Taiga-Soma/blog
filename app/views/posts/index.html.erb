<div class="container">
  <%= render "shared/header"%>
      <div class=" p-3 p-md-5 row mb-3 text-black rounded ">
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/zpOULjyy-n8?rel=0" allowfullscreen></iframe>
        </div>
      </div>
      <% if user_signed_in? %>
      <div class="p-3">
        <h4 class="font-italic">Posts</h4>
        <%= link_to 'New Post', new_post_path %>
      </div>
      <%end%>
</div>
<main role="main" class="container">
  <div class="row mb-5">
    <div class="col-md-8 blog-main">
      <div class="d-flex justify-content-around border-bottom">
        <h3 class="font-italic">投稿記事</h3>
        <%= form_with(url: search_tweets_path, local: true, method: :get, class: "search-form") do |form| %>
           <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
           <%= form.submit "検索", class: "search-btn" %>
       <% end %>
      </div>
      <br>
      <% @posts.each do |post| %>
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
          <div class="col-md-8">
            <div class="card-body">
              <%= link_to post_path(post.id) do %>
              <h3 class="card-title text-body"><%= post.title %></h3>
              <p class="card-text"><small class="text-muted"><%=  l post.created_at %></small></p>
            </div>
          </div>
          <div class="col-md mx-3 mb-4">
          <% if post.image.attached? %>
            <div class="card-img-right flex-auto d-none d-lg-block mb-3  ">
            <%# <%= image_tag post.image.variant(gravity: :center, resize:"450x300^", crop:"450x300+0+0").processed  %> 
              <%= image_tag post.image, class: "card-img-top" %> 
            </div>
          <%end%>
          </div>
        <%end%>
       </div>
      </div>
      <%end%>
      <div class="text-right">
           <a href="/posts/list" class="btn btn-primary">投稿一覧</a>
            </blockquote>
      </div><!-- /.blog-post -->
    </div><!-- /.blog-main -->
      <aside class="col-md-4 blog-sidebar">
