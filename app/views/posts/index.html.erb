          <div class="col-md-8">
            <div class="card-body">
              <%= link_to post_path(post.id) do %>
              <h3 class="card-title text-body"><%= post.title %></h3>
              <p class="card-text"><small class="text-muted"><%=  l post.created_at %></small></p>
