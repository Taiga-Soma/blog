            </div>
          </div>
        
          <% if post.image.attached? %>
            <div class="card-img-right flex-auto d-lg-block mb-3  ">
              <%= image_tag post.image, class: "card-img-top" %> 
            </div>
          <%end%>
      
        <%end%>
